{% extends "back-office/base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block slider %}{% endblock %} {# on appel le block slider vide pour ne pas l'afficher dans cette page#}
{% block body %}

            <div class="container">
                <div class="breadcrumb-area">
                    <div class="top">
                        <h1>My Profile</h1>
                    </div>
                    <ul class="breadcrumbs">
                        <li><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="active">Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Creat account start -->

                <div class="main-title">
                    <h1>{{ 'layout.login'|trans|capitalize }}</h1>
                    <div class="border" >
                        <div class="border-inner"></div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4"
                     style="border: 1px solid lightgrey; padding: 15px;">
                    <div class="submit-address">

                        {% if error %}
                            <div class="alert alert-danger fade in text-left">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                            <div class="form-group">
                                <label for="username">{{ 'security.login.username'|trans }}</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}"
                                       required="required" class="input-text form-control"
                                       placeholder="{{ 'security.login.username'|trans }}"/>
                            </div>
                            <div class="form-group">
                                <label for="password">{{ 'security.login.password'|trans }}</label>
                                <input type="password" id="password" name="_password" required="required"
                                       class="input-text form-control"
                                       placeholder="{{ 'security.login.password'|trans }}">
                            </div>

                            <div class="col-lg-12 col-md-6 col-sm-12 col-xs-12 text-left" style="margin-left: -15px;">
                                <label for="remember_me pull-left">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="1">
                                    {{ 'security.login.remember_me'|trans }}
                                </label>

                                <a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Mot de passe
                                    oublié ?</a>

                            </div>

                            <div class="col-xs-12">
                                <div class="form-group text-center">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <button type="submit" class="button-md button-theme btn-block" id="_submit"
                                                name="_submit"
                                                data-loading-text="Connexion">
                                            {{ 'security.login.submit'|trans }}
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-center">
                                    <br>
                                    <a href="{{ path('fos_user_registration_register') }}"
                                       class="text-base-color">
                                        <b>Créer un compte</b></a>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock body %}
