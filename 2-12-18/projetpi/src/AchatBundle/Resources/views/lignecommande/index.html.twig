{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lignecommandes list</h1>

    <table>
        <thead>
            <tr>
                <th>Idlignecommande</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligneCommande in ligneCommandes %}
            <tr>
                <td><a href="{{ path('lignecommande_show', { 'idlignecommande': ligneCommande.idlignecommande }) }}">{{ ligneCommande.idlignecommande }}</a></td>
                <td>{% if ligneCommande.date %}{{ ligneCommande.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lignecommande_show', { 'idlignecommande': ligneCommande.idlignecommande }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('lignecommande_edit', { 'idlignecommande': ligneCommande.idlignecommande }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lignecommande_new') }}">Create a new ligneCommande</a>
        </li>
    </ul>
{% endblock %}
