{% extends "shop.html.twig" %}
{% block content %}
    <div>
        <form action="{{ path('show_l') }}" method="get">
       <input name="filter" type="text" style="margin-top: 40px; margin-top: 40px;margin-left: 500px">
        <button type="submit" class="btn btn-default btn-sm">Filtrer par auteur</button>
        </form>


    <div class="container" style="margin-top: 40px; margin-bottom: 50px">
    <div class="row"  style="margin-left: 40px">


    {% for article in pagination %}
        <div class="col-md-3" style="height: 500px; border: 1px solid #ccc; padding: 10px 10px; border-radius: 5px; margin-right: 70px;">
            <div class="ftb-item item_2">
                <figure><img style="height: 350px;width: 250px" src="{{ asset('bundles/uploads/imagesimagesimages/'~(article.image) ) }}" >
                    <figcaption>
                        <a data-rel="prettyPhoto[]" class="like-icon icon_2" href="images/ftb-item4.png"><i class="fa fa-eye"></i></a>
                        <a class="like-icon icon_2 right" href="#"><i class="fa fa-heart"></i></a>
                    </figcaption>
                </figure>
                <div class="text text_3 text_4">
                    <h4>
                        <a href="#" style="font-size: 12px;"> {{ article.auteur }}</a>

                    </h4>
                    <span>{{ article.prixOccasion }}Dt</span>



                    <div class="clear"></div>
                    <div class="rating rating_3">
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

    <div class="kode_blog_pagination">
        {# display navigation #}
    <div class="navigation" style="margin-left: 500px; margin-bottom: 50px">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
<br>
<br>
<br>
<br>
<br>

{% endblock %}