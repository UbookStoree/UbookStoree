{% extends 'admin.html.twig' %}
{% block b %}
<center>
    <div style="margin-bottom: 50px; margin-top: 40px">
        <h1 style="margin-bottom: 20px"> Liste des categories</h1>
    <table border="1">
        <tr><th>id</th><th>nom</th><th>modification</th><th>suppression</th></tr>
        {% for m in categories %}
            <tr>
                <td> <b>{{ m.idCategorie }}</b></td>

                <td><b>{{ m.nomCategorie}}</b></td>

                <td><a class="btn btn-info fa fa-pencil" href="{{ path('update_categorie',{'idCategorie':m.idCategorie })}}">Modifier</a></td>
                <td><a class="btn btn-danger fa fa-remove" href="{{ path('delete_categorie',{'idCategorie':m.idCategorie })}}">Supprimer</a></td>

            </tr>
        {% endfor %}
    </table>
    </div>
</center>
{% endblock %}